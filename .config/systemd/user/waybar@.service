[Unit]
Description=Waybar
Documentation=man:waybar(5)
PartOf=graphical-session.target
Requires=wayland-session.target
After=wayland-session.target

[Service]
Slice=waybar.slice
ExecStart=/usr/bin/waybar -c %E/waybar/%i.jsonc
Restart=on-failure
RestartSec=1
Nice=5

[Install]
WantedBy=%i-session.target
