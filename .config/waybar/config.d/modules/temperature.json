    "format-critical": "<span font_family=\"Symbols Nerd Font\" font_size=\"10pt\" rise=\"0.4pt\"></span><span font=\"Noto Sans 12px\">  {temperatureC}<span font=\"Noto Sans 8px\" rise=\"2.5pt\">°</span></span>"
  }
}
